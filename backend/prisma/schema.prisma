generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:D:/Apps/SIST/backend/dev.db"
}

// Enums removed for SQLite compatibility, using String instead

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("KASIR") // OWNER, INVESTOR, ADMIN_OPERASIONAL, KASIR, AKUNTAN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  investorProfile Investor?
  transactions    Transaction[]
}

model Investor {
  id              String   @id @default(uuid())
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @unique
  totalInvestment Decimal  @default(0)
  sharesParam     Decimal  @default(0)
  joinedAt        DateTime @default(now())
  
  capitalHistory  Transaction[]
}

model Transaction {
  id            String          @id @default(uuid())
  type          String          // SALE, EXPENSE, CAPITAL_IN, CAPITAL_OUT, DIVIDEND
  amount        Decimal
  date          DateTime        @default(now())
  description   String?
  paymentMethod String?         // CASH, QRIS, TRANSFER, EWALLET
  
  creator       User?           @relation(fields: [creatorId], references: [id])
  creatorId     String?

  investor      Investor?       @relation(fields: [investorId], references: [id])
  investorId    String?

  supplier      Supplier?       @relation(fields: [supplierId], references: [id])
  supplierId    String?

  items         TransactionItem[]

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String
  sku         String?  @unique
  price       Decimal
  cost        Decimal?
  stock       Int      @default(0)
  category    String?
  
  transactionItems TransactionItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TransactionItem {
  id            String      @id @default(uuid())
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String
  
  product       Product?    @relation(fields: [productId], references: [id])
  productId     String?
  
  quantity      Int
  priceAtTime   Decimal
  subtotal      Decimal
}

model Asset {
  id            String   @id @default(uuid())
  name          String
  category      String
  purchaseDate  DateTime
  purchasePrice Decimal
  currentValue  Decimal
  usefulLife    Int?
  location      String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Supplier {
  id            String   @id @default(uuid())
  name          String
  contactPerson String?
  email         String?
  phone         String?
  address       String?
  category      String?
  
  transactions  Transaction[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
