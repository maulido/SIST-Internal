generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:D:/Apps/SIST/backend/dev.db"
}

// Enums removed for SQLite compatibility, using String instead

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("KASIR") // OWNER, INVESTOR, ADMIN_OPERASIONAL, KASIR, AKUNTAN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  investorProfile Investor?
  transactions    Transaction[]
  stockLogs       StockLog[]
  auditLogs       AuditLog[]
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?               // Nullable for system actions
  user      User?    @relation(fields: [userId], references: [id])
  
  action    String   // CREATE, UPDATE, DELETE, LOGIN, LOGOUT
  entity    String   // User, Product, Transaction, Investor, etc.
  entityId  String   // ID of the target record
  
  details   String?  // JSON string or Description
  
  createdAt DateTime @default(now())
}

model Investor {
  id              String   @id @default(uuid())
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @unique
  totalInvestment Decimal  @default(0)
  sharesParam     Decimal  @default(0)
  joinedAt        DateTime @default(now())
  
  capitalHistory  Transaction[]
}

model Transaction {
  id            String          @id @default(uuid())
  type          String          // SALE, EXPENSE, CAPITAL_IN, CAPITAL_OUT, DIVIDEND
  amount        Decimal
  date          DateTime        @default(now())
  description   String?
  paymentMethod String?         // CASH, QRIS, TRANSFER, EWALLET
  
  creator       User?           @relation(fields: [creatorId], references: [id])
  creatorId     String?

  investor      Investor?       @relation(fields: [investorId], references: [id])
  investorId    String?

  supplier      Supplier?       @relation(fields: [supplierId], references: [id])
  supplierId    String?

  // Debt Management
  paymentStatus String          @default("PAID") // PAID, UNPAID (Hutang)
  dueDate       DateTime?       // For UNPAID transactions

  items         TransactionItem[]

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model RecurringExpense {
  id          String   @id @default(uuid())
  name        String
  amount      Decimal
  category    String
  frequency   String   @default("MONTHLY") // DAILY, WEEKLY, MONTHLY, YEARLY
  nextDueDate DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String
  type        String   @default("GOODS") // GOODS, SERVICE
  sku         String?  @unique
  price       Decimal
  cost        Decimal?
  stock       Int      @default(0)
  category    String?
  description String?
  image       String?  // URL to product image
  
  transactionItems TransactionItem[]
  stockLogs        StockLog[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TransactionItem {
  id            String      @id @default(uuid())
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String
  
  product       Product?    @relation(fields: [productId], references: [id])
  productId     String?
  
  quantity      Int
  priceAtTime   Decimal
  subtotal      Decimal
}

model Asset {
  id            String   @id @default(uuid())
  name          String
  category      String
  purchaseDate  DateTime
  purchasePrice Decimal
  currentValue  Decimal
  usefulLife    Int?
  location      String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Supplier {
  id            String   @id @default(uuid())
  name          String
  contactPerson String?
  email         String?
  phone         String?
  address       String?
  category      String?
  
  transactions  Transaction[]
  stockLogs     StockLog[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model StockLog {
  id           String   @id @default(uuid())
  
  productId    String
  product      Product  @relation(fields: [productId], references: [id])
  
  changeAmount Int      // Positive for restock, negative for sale/adjustment
  finalStock   Int
  type         String   // RESTOCK, SALE, ADJUSTMENT, INITIAL
  
  supplierId   String?
  supplier     Supplier? @relation(fields: [supplierId], references: [id])
  
  cost         Decimal? // Cost at the time of purchase/log
  note         String?
  
  userId       String?
  user         User?    @relation(fields: [userId], references: [id])
  
  createdAt    DateTime @default(now())
}
